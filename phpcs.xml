<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="drupal">
  <description>PHP CodeSniffer configuration for Drupal coding standards.</description>
  <config name="drupal_core_version" value="7" />
  <arg name="extensions" value="php,module,inc,install,test,profile,theme,css,info,txt,md,yml" />
  <arg name="basepath" value="."/>
  <exclude-pattern>composer.*</exclude-pattern>
  <exclude-pattern>php.xml.dist</exclude-pattern>
  <exclude-pattern>patches/*</exclude-pattern>
  <exclude-pattern>modules/contrib</exclude-pattern>
  <exclude-pattern>libraries</exclude-pattern>
  <exclude-pattern>themes/omega</exclude-pattern>
  <exclude-pattern>*/tests/*</exclude-pattern>
  <rule ref="../../drupal/coder/coder_sniffer/Drupal"/>
  <rule ref="../../drupal/coder/coder_sniffer/DrupalPractice"/>
</ruleset>
